#!/bin/sh

# Pre-push hook to run linting and type checking

echo "ğŸ“‹ Running ESLint..."
pnpm lint

if [ $? -ne 0 ]; then
  echo "âŒ ESLint found issues. Please fix them before pushing."
  exit 1
fi

echo "ğŸ“‹ Running TypeScript type checking..."
pnpm typecheck

if [ $? -ne 0 ]; then
  echo "âŒ TypeScript found type errors. Please fix them before pushing."
  exit 1
fi

echo "âœ… Linting and type checking passed! Pushing changes..."
exit 0